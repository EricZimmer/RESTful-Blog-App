<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">
    New Blog
  </div>
  <form action="/blogs" method="POST" class="ui form">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" placeholder="blog title">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" placeholder="image-url">
    </div>
    <div class="field">
        <label>Blog Content</label>
        <textarea name="blog[body]" placeholder="blog entry"></textarea>
    </div>

    <input class="ui violet basic button" type="submit">
  </form>

</div>


<% include ./partials/footer %>